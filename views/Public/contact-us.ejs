<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("./shared/styles") %>

        <title>
            <%= pageTitle %>
        </title>
</head>
<%- include("./shared/header") %>

    <body>
        <main>
            <div class="container">
                <div class="row">
                    <h1>Get in Contact with Us!</h1>
                </div>
                <div class="row">
                    <form method="POST" action="/public/contact-us/create" id="contactform" class="container mt-3">
                        <h3>Drop Us a Message</h3>
                        <div id="liveAlertPlaceholder"></div>
                        <div class="row">
                            <div class="col">

                                <div class="form-group mb-3">
                                    <input type="text" name="name" class="form-control" placeholder="Your Name *"
                                        value="" required>
                                </div>
                                <div class="form-group mb-3">
                                    <input type="text" name="email" class="form-control" placeholder="Your Email *"
                                        required>
                                </div>
                                <div class="form-group mb-3">
                                    <textarea name="message" class="form-control" placeholder="Your Message *"
                                        style="width: 100%; height: 150px;" required></textarea>
                                </div>
                                <div class="form-group">
                                    <input type="submit" name="btnSubmit" class="btn btn-primary" value="Send Message">
                                </div>
                            </div>
                        </div>
                </div>
            </div>
        </main>
        <%- include("./shared/footer") %>
    </body>
    <script src = "/public/js/alerts.js"></script>
    <script>
    error = "<%= errorMessages %>";
    if (error) {
            appendAlert(error, "warning");
        }
    </script>

</html>