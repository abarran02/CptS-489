<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("./shared/styles") %>
    <title><%= pageTitle %></title>
</head>

<body>
    <%- include("./shared/header") %>
    <main>
        <div class="container">
            <div class="row">
                <h1>Inventory Management</h1>
                <!-- Form to enter inventory item -->
                <form action = "" method = "POST" id="inventoryForm" class="container mt-3">
                    <div class="row mb-3">
                        <label for="itemName" class="col-sm-1 col-form-label">Item Name:</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="itemName" name="itemName" required min="0">
                        </div>
                    </div>
                
                    <div class="row mb-3">
                        <label for="pricing" class="col-sm-1 col-form-label">Pricing:</label>
                        <div class="col-sm-10">
                            <input type="number" class="form-control" id="pricing" name="pricing" required min="0">
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label for="quantity" class="col-sm-1 col-form-label">Stock:</label>
                        <div class="col-sm-10">
                            <input type="number" class="form-control" id="quantity" name="quantity" required min ="0">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <!-- First input field with label -->
                        <div class="col-sm-3">
                            <label for="Amount" class="col-form-label">Amount:</label>
                            <input type="number" class="form-control" id="Amount" name="Amount" required>
                        </div>
                    
                        <!-- Second input field with label -->
                        <div class="col-sm-3">
                            <label for="Unit" class="col-form-label">Unit:</label>
                            <input type="text" class="form-control" id="Unit" name="Unit" required>
                        </div>
                    </div>
                
                    <div class="row mb-3">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-primary">Add Item</button>
                        </div>
                    </div>
                </form>
                <!-- Code to populate inventory table from user's SQL db -->
                <table class = "table table-hover" id="productstable">
                    <thead>
                        <th scope = "col">Item</th>
                        <th scope = "col">Quantity</th>
                        <th scope = "col">Pricing</th>
                        <th scope = "col">Discount</th>
                        <th scope = "col">Tags</th>
                      </thead>
                        <!-- Example entry -->
                        <tr>
                            <td>Flour - 2lb</td>
                            <td>1000</td>
                            <td>$15</td>
                            <td>0 %</td>
                            <td>Baking, Flour, Gluten</td>
                        </tr>
                        <tr>
                            <td>Ground Turkey - 1lb</td>
                            <td>2000</td>
                            <td>$4.50</td>
                            <td>15 %</td>
                            <td>Meat, Poultry, Turkey</td>
                        </tr>
                </table>
            </div>
        </div>
    </main>

    <%- include("./shared/footer") %>
</body>

</html>